<% if (tasks.length>0) { %>

<% tasks.forEach(task => { %>
    <div style="background-color: <%= task.categoryColor; %>"
         class="py-1 px-2 text-white rounded-2 d-flex justify-content-between align-items-center mb-2">
        <a href="/task/edit/<%= task.id %>" class="m-0"><%= task.task; %></p>
            <div>
                <% if(task.done){ %>
                    <a href="/task/status?done=0&id=<%= task.id %>"><i class="bi bi-check-square"></i></a>
                <% }else{ %>
                    <a href="/task/status?done=1&id=<%= task.id %>"><i class="bi bi-square"></i></a>
                <% } %>
                <a class="btn btn-danger btn-sm text-white" href="/task/delete/<%= task.id %>"><i
                            class="bi bi-trash"></i></a>
            </div>
    </div>
<% }); %>
<% }else{ %>
<p class="text-center mt-5">You dont have tasks.</p>
    <% } %>